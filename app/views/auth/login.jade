extends ../layout

block header
  link(rel='stylesheet', href='/stylesheets/themes/auth.css')

  script(type='text/javascript', src='/javascripts/konter.auth.js')

block content

  .login-container

    .big-logo.pull-right
      img( src='/images/logo.png' )
      h1 TASTENBOX
      h2 collaboration back office

    form( action='/login', method='post' )
      input( type='hidden', name='_csrf', value=_csrf )

      p
        label=t('welcome')
        br
        input.js-get-focus( type='text', name='email', placeholder='Email' )
      p
        label Password
        br
        input( type='password', name='password', placeholder'Password' )

      p(style='text-align: right; margin-top: 15px')
        button.k-button(type='submit') Login

    p.footer
      span.pull-right
        |TASTENBOX is a service by TASTENWERK &copy;
        =moment().format('YYYY')
      a( href='/register') Register
      |&nbsp;|&nbsp;
      a( href='/forgot_password' ) Forgot Password
      |&nbsp;|&nbsp;
      a( href='/forgot_password' ) Back to frontpage