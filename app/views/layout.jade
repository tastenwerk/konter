!!! 5
html
  head
    meta( http-equiv='Content-Type', content='text/html', charset='utf-8' )
    block header
      include _header

  body

    .main-container

      .konter-bar
        .logo
        .account-info-container
          .account-picture
          .actions.account-actions
            a.xhr-link.name(href='/users/#{currentUser._id}')
              =currentUser.name.full
            .vertical-user-actions-stack
              a(href='#', title=t('My Profile'))
                i.icon.icon-edit
              a(href='/logout', title=t('Log off'))
                i.icon.icon-off

      .icon-bar
        a(href='#')
          i.icon-large.white.icon-home
          span.text=t('Home')
        a(href='#')
          i.icon-large.white.icon-list
          span.text=t('Tasks')

      input( type='hidden', id='_csrf', value=_csrf )

      .content-wrapper
        block content
